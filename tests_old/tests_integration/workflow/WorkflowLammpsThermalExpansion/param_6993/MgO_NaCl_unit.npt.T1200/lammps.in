# ---- initialize simulations
clear
units metal
dimension 3
boundary p p p
atom_style charge
atom_modify map array
# ---- create atoms
read_data /Users/eugeneragasa/pyflamestk_git/pypospack/tests/tests_integration/workflow/WorkflowLammpsThermalExpansion/param_6993/MgO_NaCl_unit.npt.T1200/lammps.structure
# ---- define interatomic potential
include potential.mod
# ---- define settings
compute eng all pe/atom
compute eatoms all reduce sum c_eng
# ---- run minimization
reset_timestep 0
fix 1 all box/relax iso 0.0 vmax 0.001
thermo 10
thermo_style custom step pe lx ly lz xy xz yz press pxx pyy pzz pxy pxz pyz c_eatoms
min_style cg
minimize 1e-25 1e-25 5000 10000
unfix 1
# ---- define output variables ----
variable natoms equal "count(all)"
variable tot_energy equal "c_eatoms"
variable length_x equal "lx"
variable length_y equal "ly"
variable length_z equal "lz"
variable tilt_xy equal "xy"
variable tilt_xz equal "xz"
variable tilt_yz equal "yz"
variable tot_press equal "press"
variable press_xx equal "pxx"
variable press_yy equal "pyy"
variable press_zz equal "pzz"
variable press_xy equal "pxy"
variable press_xz equal "pxz"
variable press_yz equal "pyz"

# ---- output ----
print "pypospack:output_section:begin"
print "tot_energy = ${tot_energy}"
print "num_atoms = ${natoms}"
print "xx = ${length_x}"
print "yy = ${length_y}"
print "zz = ${length_z}"
print "xy = ${tilt_xy}"
print "xz = ${tilt_xz}"
print "yz = ${tilt_yz}"
print "tot_press = ${tot_press}"
print "pxx = ${press_xx}"
print "pyy = ${press_yy}"
print "pzz = ${press_zz}"
print "pxy = ${press_xy}"
print "pxz = ${press_xz}"
print "pyz = ${press_yz}"
print "pypospack:output_section:done"
print "pypospack:lammps_sim:done"
#------------------------------------------------------------------------------
# RUN THERMOSTAT
# running using an NPT Nose-Hoover style thermostat
#------------------------------------------------------------------------------
variable tempdamp equal 0.1
variable pressdamp equal 1.0
# set initial velocities
velocity all create 1200 8676308 mom yes dist gaussian loop all
# fix for Nose-Hoover style thermostat
fix 20 all npt temp 1200 1200 0.1 aniso 0.0 0.0 1.0 drag 1.0 couple xyz
variable boxx equal lx
variable boxy equal ly
variable boxz equal lz
variable boxp equal press
variable boxt equal temp
# calculate averages every 10000 steps
reset_timestep 0
fix 21 all ave/time 10 10 100 v_boxx v_boxy v_boxz v_boxp v_boxt file lattice.out
thermo_style custom step temp pe ke etotal press lx ly lz press pxx pyy pzz pxy pxz pyz vol
thermo_modify flush yes
thermo 100
run 100000
unfix 20
unfix 21
print "seeds:8676308"