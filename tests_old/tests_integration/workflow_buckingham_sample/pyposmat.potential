potential:
    potential_type: buckingham
    chemical_symbols: ['Mg', 'O']
    
parameter_optimization:
    optimization_algo: pareto
    n_iterations: 10
    n_simulations_per_iteration: 10000
    parameters:
    - 'chrg_Mg'
    - 'chrg_O'
    - 'MgO_A'
    - 'MgO_rho'
    - 'MgO_C'
    - 'OO_A'
    - 'OO_rho'
    - 'OO_C'
    - 'MgMg_A'
    - 'MgMg_rho'
    - 'MgMg_C'
    constraints:
    - 'chrg_O = - chrg_Mg'
    - 'MgO_C = 0.0'
    - 'MgMg_A = 0.0'
    - 'MgMg_rho = 0.5'
    - 'MgMg_C = 0.0'
    initial_distribution: distribution
    distribution_parameters:
    - name: 'chrg_Mg'
      low: +1.5
      high: +2.5
    - name: 'MgO_A'
      low: 800.0
      high: 1300.0
    - name: 'MgO_rho'
      low: 0.29
      high: 0.33
    - name: 'OO_A'
      low: 500.00
      high: 25000.00
    - name: 'OO_rho'
      low: 0.100
      high: 0.400
    - name: 'OO_C'
      low: 25.00
      high: 77.00
