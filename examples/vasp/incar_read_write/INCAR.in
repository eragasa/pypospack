SYSTEM = Ni fcc

# ---- INITIALIZATION OF PARAMETERS ----
ISTART = 0        ! start from scratch     
ICHARG = 2        ! superposition of atomic charge densities

# ---- SPIN POLARIZED CALCULATIONS ----
ISPIN = 2         ! spin polarized calculation
MAGMOM = 4*1.0    ! magnetic moments

# ---- DENSITY OF STATE CALCULATIONS ----
ISMEAR = 1        ! Methfessel-Paxton order 1, for metals
SIGMA = 0.2       ! smearing parameter

# ---- SCF CONVERGENCE ----
ALGO = Normal     ! Normal
EDIFF = 1E-6      ! eV
ENCUT = 425       ! EV
NELM = 200        ! max number of electronic relaxation steps
PREC = Accurate

# ---- IONIC RELAXATION ----
EDIFFG = -0.001 ! eV/A
IBRION = 2      ! CG
ISIF = 3        ! relax everything
POTIM = 0.5     ! dampening factor
NSW=200         ! max number of relaxation steps

# Writing files
#LWAVE = .FALSE.  ! no WAVECAR
#LCHARG = .FALSE. ! no CHGCAR/CHG
#LVTOT = .FALSE.  ! no LOCPOT
