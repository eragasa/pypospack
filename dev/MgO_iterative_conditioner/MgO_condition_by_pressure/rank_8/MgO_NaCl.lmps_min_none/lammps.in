# ---- initialize simulations
clear
units metal
dimension 3
boundary p p p
atom_style charge
atom_modify map array
# ---- create atoms
read_data /home/manuelesp/repos/pypospack/dev/MgO_iterative_conditioner/MgO_condition_by_pressure/rank_8/MgO_NaCl.lmps_min_none/lammps.structure
# ---- define interatomic potential
include potential.mod
# ---- define settings
compute eng all pe/atom
compute eatoms all reduce sum c_eng
# ---- run minimization
reset_timestep 0
thermo 10
thermo_style custom step pe lx ly lz xy xz yz press pxx pyy pzz pxy pxz pyz c_eatoms
run 0
# ---- define output variables ----
variable natoms equal "count(all)"
variable tot_energy equal "c_eatoms"
variable a11 equal "xhi-xlo"
variable a22 equal "yhi-ylo"
variable a33 equal "zhi-zlo"
variable tilt_xy equal "xy"
variable tilt_xz equal "xz"
variable tilt_yz equal "yz"
variable tot_press equal "press"
variable press_xx equal "pxx"
variable press_yy equal "pyy"
variable press_zz equal "pzz"
variable press_xy equal "pxy"
variable press_xz equal "pxz"
variable press_yz equal "pyz"

# ---- output ----
print "pypospack:output_section:begin"
print "tot_energy = ${tot_energy}"
print "num_atoms = ${natoms}"
print "a11 = ${a11}"
print "a22 = ${a22}"
print "a33 = ${a33}"
print "a12 = ${tilt_xy}"
print "a13 = ${tilt_xz}"
print "a23 = ${tilt_yz}"
print "tot_press = ${tot_press}"
print "pxx = ${press_xx}"
print "pyy = ${press_yy}"
print "pzz = ${press_zz}"
print "pxy = ${press_xy}"
print "pxz = ${press_xz}"
print "pyz = ${press_yz}"
print "pypospack:output_section:done"
print "pypospack:lammps_sim:done"
